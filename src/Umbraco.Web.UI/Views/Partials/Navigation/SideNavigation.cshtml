@inherits AmaziliaTemplatePage
@using Umbraco.Web;
@using Amazilia.Web.Mvc;
@using Amazilia.Web.Extentions;
@using Amazilia.Web.Controllers;
@{
    /**/
    var site = Model.Content.Site();
    var selection = site.Children.Where(x => x.IsVisible());
    var customer = Amazilia.Web.AmaziliaContext.Current.CurrentCustomer;
      var hasBasket = customer.ShoppingCartItems.Count > 0;// check for basket, id 1169 is the checkout content node
}
<div class="sidebar-mask" id="sidebar-mask">
</div>

<div class="navbar-light nav-bar border-right"  id="sidebar-wrapper">
        <nav>
            <div class="list-group">
                <!-- uncomment this line if you don't want it to appear in the top navigation -->
                <a class=" list-group-item list-group-item-action @Html.Raw(Model.Content.Id == site.Id ? " navi-link--active" : "" )" href="@site.Url">@site.Name</a>

                @foreach (var item in selection.Where(x =>
        (customer.Anonymous || !x.HideWhenAuthorized()) &&
        (x.Id != 1169 || hasBasket)))
                {
                    <a class=" list-group-item list-group-item-action @(item.IsAncestorOrSelf(Model.Content) ? " nav-link--active" : null)" href="@item.Url">@item.Name</a>
                }

                @if (!customer.Anonymous)
                {
                    <a class=" list-group-item list-group-item-action" href="@Url.Action("logout", "MemberShip", new { redirectId = CurrentPage.Id, path = "",  area = "Amazilia" })">@customer.Member.Name  Log out</a>
                }

            </div>
        </nav>
        <button class="navbar-toggler" type="button" id="menu-toggle" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
</div>



